generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Data {
  key       String   @id
  value     String?
  createdAt DateTime @default(now()) @map("created_at")
}

model Finance {
  id          Int      @id @default(autoincrement())
  type        String   // 'income' atau 'expense'
  amount      Float
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
}

model Notes {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String?
  createdAt DateTime @default(now()) @map("created_at")
}

model Reminders {
  id        Int      @id @default(autoincrement())
  date      DateTime
  message   String
  createdAt DateTime @default(now()) @map("created_at")
}

model WhatsappSessions {
  id         Int      @id @default(autoincrement())
  session_id String   @unique
  data       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
